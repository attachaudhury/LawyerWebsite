<% layout('./layout') -%>
<div class="jumbotron">
    <div class="container text-center">
      <h1>Map List</h1>      
      <p>All your maps</p>
    </div>
  </div>
  <div class="container">
    <table class="table table-dark">
      <thead>
        <tr>
          <!-- <th scope="col">Id</th> -->
          <th scope="col" style="width:90%">Map Name</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
  
          <% for(var i=0; i < data.model.length; i++) { %>
            <tr>
              <!-- <td><%= data.model[i]._id %></td> -->
              <td><%= data.model[i].name %></td>
              <td style="cursor: pointer;">
                <a href="/admin/mapedit?id=<%= data.model[i]._id%>"><i class="far fa-edit"></i><a>
                <a id="<%= data.model[i]._id%>" onclick="deleteitem(this.id)"><i class="far fa-trash-alt"></i></a>
              </td>
            </tr>
         <% } %>
          
      </tbody>
    </table>
  </div>
  <div class="modal" id="deleteconfirmdialog" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Are You Sure to delete</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>Modal body text goes here.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" onclick="deleteconfirm()">Yes Delete</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        </div>
      </div>
    </div>
  </div>
  <script>
    var deletingid ;
    function deleteconfirm()
    {
      $("#deleteconfirmdialog").modal('hide')
      $.ajax({
      url: '/admin/mapdelete?id='+deletingid,
      type: 'get',
      success: function (data) {
        if (data.status == "success") {
          window.location.reload()
          alert('success');
        }
        else{
          alert(data.data);
        }
      },
      error: function (data) {
        alert('error');
      }
    })
    }
    function deleteitem(id)
    {
      deletingid = id;
     $("#deleteconfirmdialog").modal('show') 
    }
  </script>