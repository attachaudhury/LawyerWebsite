<% layout('./layout') -%>
<div class="jumbotron">
    <div class="container text-center">
      <h1>Setting</h1>      
      <p>You can manage website setting here</p>
    </div>
  </div>
  <div  class="container">
    <div class="form-group row">
      <div class="col-2">
        <label>Company Name</label>
      </div>
      <div class="col-8">
        <input id="companyname" type="text" value="<%= data.companyname || '' %>" class="form-control">
      </div>
      <div class="col-2">
        <button onclick="saveKeyValue('companyname')" class="btn btn-primary">Save</button>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-2">
        <label>Company Phone</label>
      </div>
      <div class="col-8">
        <input id="companyphone" type="text" value="<%= data.companyphone || '' %>" class="form-control">
      </div>
      <div class="col-2">
        <button onclick="saveKeyValue('companyphone')" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
  <script>
    function saveKeyValue(key)
    {
      console.log(key)
      var value = $("#"+key).val();
      $.ajax({
        url:'/admin/saveSettingKeyValue',
        type:'post',
        data:{key:key,value:value},
        success:function(data){
          console.log(data);
          if(data.status=='success')
          {
            alert('saved')
          }
          else{
            alert('not saved')

          }
        },
        error:function(data)
        {
          alert('not saved')
        }
      })
    }
  </script>